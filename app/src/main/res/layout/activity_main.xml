<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">


            <Button
                android:id="@+id/btn_activity_life_cycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ActivityLifeCycle"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_standard_fun_with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="StandardFun--With"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_ui_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ui test"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ListView"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RecyclerView"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnWeChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WeChat"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_frag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fragment"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_storage_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Storage----File"
                android:textAllCaps="false" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>